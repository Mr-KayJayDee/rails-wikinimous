<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h2><%= @article.title %></h2>
                </div>
                <div class="card-body">
                    <p><%= @article.content %></p>
                </div>
                <div class="card-footer">
                    <%= link_to "<i class='fas fa-edit'></i> Edit".html_safe, edit_article_path(@article), class: "btn btn-primary" %> |
                    <%= link_to "<i class='fas fa-arrow-left'></i> Back".html_safe, articles_path, class: "btn btn-secondary" %>
                </div>
            </div>
        </div>
    </div>
</div>