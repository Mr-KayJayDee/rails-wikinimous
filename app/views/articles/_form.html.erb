<%= form_with model: @article, class: "form-group" do |form| %>
    <div class="form-group">
        <%= form.label :title, class: "font-weight-bold" %>
        <%= form.text_field :title, id: :article_title, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.label :content, class: "font-weight-bold" %>
        <%= form.text_field :content, id: :article_content, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= form.submit "Save", class: "btn btn-primary" %>
        <%= link_to "<i class='fas fa-arrow-left'></i> Cancel".html_safe, articles_path, class: "btn btn-secondary" %>
    </div>
<% end %>